{
    "manifest_version": 2,

    "name": "Y U NO SI?!",
    "description": "This extension converts and rewrites all mentions of imperial units to SI",
    "version": "0.3",
    "offline_enabled": true,

    "permissions": [
        "storage",
        "tabs"
        ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "file://*/*",
                "http://*/*",
                "https://*/*"
            ],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "yunosi.html"
    }
}
